}

/* âœï¸ è¾“å…¥æ¡† */
QLineEdit, QPlainTextEdit, QTextEdit {
    border: 1px solid #3a3a3a;
    border-radius: 6px;
    padding: 6px 10px;
    background-color: #2b2b2b;
    color: #e0e0e0;
}
QLineEdit:hover, QPlainTextEdit:hover, QTextEdit:hover {
    border: 1px solid #2f80ed;
}
QLineEdit:focus, QPlainTextEdit:focus, QTextEdit:focus {
    border: 1px solid #2f80ed;
    background-color: #1a2636;
}
QLineEdit::placeholder {
    color: #777777;
}

/* ğŸ”˜ é€šç”¨æŒ‰é’®åŸºç¡€ */
QPushButton {
    border: 1px solid #3a3a3a;
    border-radius: 6px;
    padding: 6px 14px;
    font-size: 14px;
    font-weight: 500;
    background-color: #2b2b2b;
    color: #e0e0e0;
}

/* ğŸ”µ å¯¼èˆªæŒ‰é’®ï¼ˆæš—åº•è“å­—ï¼Œé€‰ä¸­æ—¶è“åº•ç™½å­—ï¼‰ */
QPushButton#btnResolve,
QPushButton#btnDownloadList,
QPushButton#btnDownloadStatus,
QPushButton#btnSetting,
QPushButton#btnAbout {
    background-color: #2b2b2b;
    color: #2f80ed;
    border: 1px solid #2f80ed;
}

QPushButton#btnResolve:hover,
QPushButton#btnDownloadList:hover,
QPushButton#btnDownloadStatus:hover,
QPushButton#btnSetting:hover,
QPushButton#btnAbout:hover {
