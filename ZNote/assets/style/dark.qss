}

/* âŒ å±é™©æŒ‰é’® */
QPushButton#btnClearLog,
QPushButton#btnClearHistory {
    background-color: #3a1e1e;
    color: #f87171;
    border: 1px solid #dc2626;
}
QPushButton#btnClearLog:hover,
QPushButton#btnClearHistory:hover {
    background-color: #4c1f1f;
}
QPushButton#btnClearLog:pressed,
QPushButton#btnClearHistory:pressed {
