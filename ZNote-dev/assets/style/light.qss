}

/* âŒ å±é™©æŒ‰é’® */
QPushButton#btnClearLog,
QPushButton#btnClearHistory {
    background-color: #fef2f2;
    color: #b91c1c;
    border: 1px solid #fca5a5;
}
QPushButton#btnClearLog:hover,
QPushButton#btnClearHistory:hover {
    background-color: #fee2e2;
}
QPushButton#btnClearLog:pressed,
QPushButton#btnClearHistory:pressed {
    background-color: #fecaca;
}

/* ğŸ“Š è¿›åº¦æ¡ */
QProgressBar#pbarDownload {
    background-color: #f1f1f0;
    border-radius: 6px;
    color: #2f3437;
    text-align: center;
}
QProgressBar#pbarDownload::chunk {
    background-color: #2f80ed;
    border-radius: 6px;
}

/* ğŸ—‚ï¸ Tab æ ·å¼ */
QTabBar::tab {
    background: #f7f6f3;
    color: #6b6b6b;
    padding: 8px 16px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
}
QTabBar::tab:selected {
    background: #ffffff;
    color: #2f80ed;
    font-weight: bold;
    border-bottom: 2px solid #2f80ed;
}
QTabBar::tab:hover {
    background: #f0f7ff;
    color: #2f3437;
}

/* ğŸ“‹ è¡¨æ ¼è§†å›¾ */
QTableView, QTableWidget {
    border: 1px solid #d4d4d4;
    gridline-color: #e1e1e0;
    background-color: #ffffff;
    alternate-background-color: #f9fafb;
    selection-background-color: #2f80ed;
    selection-color: #ffffff;
}

/* ğŸ”½ ä¸‹æ‹‰æ¡† */
QComboBox {
    border: 1px solid #d4d4d4;
    border-radius: 6px;
    padding: 4px 8px;
    background-color: #ffffff;
    color: #000000;
}
QComboBox:hover {
    border: 1px solid #2f80ed;
}
QComboBox::drop-down {
    border-left: 1px solid #d4d4d4;
}
QComboBox::down-arrow {
    image: url(:/icons/down-arrow.png);
    width: 12px;
    height: 12px;
}
QComboBox QAbstractItemView {
    background: #ffffff;
    outline: 0;
    border: 1px solid #d4d4d4;
}
QComboBox QAbstractItemView::item {
    color: #000000;
    padding: 4px 8px;
}
QComboBox QAbstractItemView::item:hover {
    background: #f0f7ff;
    color: #000000;
}
QComboBox QAbstractItemView::item:selected {
    background: #2f80ed;
    color: #ffffff;
}
QComboBox:editable QLineEdit {
    background: #ffffff;
    color: #000000;
    selection-background-color: #2f80ed;
    selection-color: #ffffff;
}

/* ğŸ› ï¸ å·¥å…·æŒ‰é’® */
QToolButton {
    background-color: #ffffff;
    border: 1px solid #d4d4d4;
    border-radius: 6px;
    padding: 4px 8px;
}
QToolButton:hover {
    background-color: #f0f7ff;
    border: 1px solid #2f80ed;
}
QToolButton:pressed {
    background-color: #dbe9ff;
}

/* ğŸ“‘ åªè¯» QTextBrowser */
QTextBrowser#tbwLog {
    background-color: #ffffff;
    border: 1px solid #e1e1e0;
    border-radius: 6px;
    color: #2f3437;
}

/* ğŸ“œ æ»šåŠ¨æ¡æ ·å¼ */
QScrollBar:vertical {
    width: 12px;
    background: #F3F4F6;
    border-radius: 6px;
}
QScrollBar::handle:vertical {
    background: #2563EB;
    min-height: 20px;
    border-radius: 6px;
}
QScrollBar::handle:vertical:hover {
    background: #1D4ED8;
}
QScrollBar::handle:vertical:pressed {
    background: #1E40AF;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    height: 12px;
    background: #F3F4F6;
}
QScrollBar::handle:horizontal {
    background: #2563EB;
    min-width: 20px;
    border-radius: 6px;
}
QScrollBar::handle:horizontal:hover {
    background: #1D4ED8;
}
QScrollBar::handle:horizontal:pressed {
    background: #1E40AF;
}
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* â˜‘ï¸ QCheckBox */
QCheckBox {
    spacing: 8px;
    font-size: 14px;
    color: #2f3437;
}
QCheckBox:hover {
    color: #1a56db;
}
QCheckBox:disabled {
    color: #9ca3af;
}
QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border-radius: 4px;
    border: 1px solid #cbd5e1;
    background-color: #ffffff;
}
QCheckBox::indicator:hover {
    border: 1px solid #2f80ed;
    background-color: #f0f7ff;
}
QCheckBox::indicator:checked {
    border: 1px solid #2f80ed;
    background-color: #2f80ed;
    image: url(:/icons/checkmark.png);
    background-position: center;
    background-repeat: no-repeat;
}
QCheckBox::indicator:checked:pressed {
    background-color: #1a56db;
    border: 1px solid #1a56db;
}
QCheckBox::indicator:disabled {
    border: 1px solid #d1d5db;
    background-color: #f3f4f6;
}
QCheckBox::indicator:checked:disabled {
    background-color: #9ca3af;
    border: 1px solid #9ca3af;
}
