    color: white;
    border: none;
    border-radius: 8px; /* 0.5rem * 16 = 8px */
    font-size: 16px; /* 1rem * 16 = 16px */
    font-weight: 500;
    transition: all 0.3s ease;
}

QPushButton#btnDownload:hover {
