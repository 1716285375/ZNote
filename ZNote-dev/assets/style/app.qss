/* 主Logo文字Logo样式 */
QLabel#lblApp {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    color: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0,
                          stop:0 #93C5FD,  /* var(--primary-light) */
                          stop:1 #3B82F6); /* var(--primary) */
    padding: 4px 8px;
}


/* 悬停效果（可选） */
QLabel#lblApp:hover,
QLabel#logoMainText:hover {
    color: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0,
                          stop:0 #B6DBFF,
                          stop:1 #5B9BFF);
}

