/**  Log */


/* 清除日志按钮样式 */
QPushButton#btnClearLog {
    /* 基础样式 */
    background-color: #374151; /* var(--gray-700) */
    color: #9CA3AF; /* var(--gray-400) */
    border: 1px solid transparent;
    border-radius: 6px;
    padding: 4px 10px;
    font-size: 13px;

    /* 图标与文字间距 */
    spacing: 4px;
}

/* 悬停状态 - 提示用户可交互 */
QPushButton#btnClearLog:hover {
    background-color: #4B5563; /* var(--gray-600) */
    color: #EF4444; /* var(--danger) - 警告色提示风险操作 */
    border-color: rgba(239, 68, 68, 0.3); /* 轻微危险色边框 */
}

/* 按下状态 - 强化反馈 */
QPushButton#btnClearLog:pressed {
    background-color: #1F2937; /* var(--gray-800) */
    color: #EF4444; /* var(--danger) */
    padding-top: 5px;
    padding-bottom: 3px; /* 轻微位移模拟按压感 */
}

/* 禁用状态 */
QPushButton#btnClearLog:disabled {
    background-color: #374151; /* var(--gray-700) */
    color: #6B7280; /* var(--gray-500) */
    opacity: 0.7;
}

/* 带图标的样式扩展 */
QPushButton#btnClearLog::icon {
    width: 14px;
    height: 14px;
    color: #9CA3AF; /* 默认图标色 */
}

QPushButton#btnClearLog:hover::icon {
    color: #EF4444; /* 悬停时图标同步变色 */
}


